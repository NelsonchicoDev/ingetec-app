// Archivo: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum para asegurar consistencia en los estados
enum CompanyStatus {
  ACTIVE
  INACTIVE
  PENDING
}

// 1. Modelo de Usuario (Necesario para NextAuth y tu App)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String?   @default("USER") // ADMIN o USER
  password      String? // Opcional si usas solo Google/GitHub

  // Relaciones con Auth (Si usas NextAuth)
  accounts Account[]
  sessions Session[]

  // 游녢 Relaci칩n con tu App (Empresa e Inspecciones)
  companyId   String?
  company     Company?     @relation(fields: [companyId], references: [id])
  inspections Inspection[] // Un usuario puede hacer muchas inspecciones

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. Modelos Auxiliares para NextAuth (Si usas login social)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id          String       @id @default(uuid())
  rut         String       @unique
  name        String
  address     String?
  phone       String?
  logoUrl     String?
  industry    String?
  status      String       @default("ACTIVE")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  users       User[]
  // Relaci칩n inversa: Una empresa tiene muchos trabajadores
  workers     Worker[]
  inspections Inspection[]
}

model Worker {
  id   String @id @default(uuid())
  name String

  // 游녢 AGREGA ESTOS 3 CAMPOS NUEVOS
  email                 String? @unique // El email debe ser 칰nico
  phone                 String? // El signo ? significa que es Opcional (puede ir vac칤o)
  role                  String  @default("PREVENCIONISTA") // Valor por defecto
  password              String?
  // Si ten칤as 'rut' antes, puedes dejarlo o borrarlo si ya no lo usas.
  rut                   String?
  secRegistrationNumber String? // Ej: N춿 VP/T 1894 (Solo para expertos)
  digitalSignature      String? @db.Text // El dibujo de la firma en Base64

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones (No toques esto)
  companyId   String?
  company     Company?     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  inspections Inspection[]
}

